<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sky"
    tools:context=".ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/copyrightTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â© 2023 ElecClac. All rights reserved."
                android:textSize="12sp"
                android:textColor="#333333"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/profileTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile Page"
                android:textSize="24sp"
                android:textColor="#333333"
                android:layout_below="@id/copyrightTextView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp" />

            <ImageView
                android:id="@+id/profileImageView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/pic"
                android:layout_below="@id/profileTitleTextView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp" />

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: Muhammad Aliff Zafran bin Matzahir"
                android:textSize="18sp"
                android:textColor="#333333"
                android:layout_below="@id/profileImageView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp" />

            <TextView
                android:id="@+id/groupTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Group: RCS240 5B"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_below="@id/nameTextView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/studentNumberTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matric Number: 2022972931"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_below="@id/groupTextView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/programCodeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Program Code: CS240"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_below="@id/studentNumberTextView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/exampleLinkTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="www.example.com"
                android:textSize="18sp"
                android:textColorLink="#000000"
                android:autoLink="web"
                android:linksClickable="true"
                android:layout_below="@id/programCodeTextView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/electricityButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go to Electricity Page"
                android:textColor="#FFFFFF"
                android:layout_below="@id/exampleLinkTextView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
